<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.esa.s1tbx</groupId>
		<artifactId>s1tbx</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <packaging>jar</packaging>

    <artifactId>s1tbx-config</artifactId>
    <name>S1TBX config</name>
    <description>Adds the resources for the runtime environment.</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <all.clusters>${project.build.directory}/../../../snap-desktop/snap-application/target/snap</all.clusters>
    </properties>
	
	<build>
		<pluginManagement>
	        <plugins>
				<plugin>
					<artifactId>maven-resources-plugin</artifactId>
					<version>2.7</version>
					<executions>
                        <execution>
                            <id>copy-conf-files</id>
                            <phase>generate-resources</phase>
                            <goals>
                                <goal>copy-resources</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${all.clusters}/etc/</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>etc</directory>
                                        <filtering>false</filtering>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	 </build>      		

</project>
