<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>

    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <source>../README.md</source>
            <lineEnding>unix</lineEnding>
            <filtered>true</filtered>
        </file>
        <file>
            <source>../VERSION.txt</source>
            <filtered>true</filtered>
        </file>
        <file>
            <source>../LICENSE.html</source>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>../src/main/licenses</directory>
            <outputDirectory>licenses</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <excludes>
                <exclude>org.esa.snap:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>modules</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>org.esa.snap:*</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>