<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>nest-op-feature-extraction</symbolicName>
    <version>6.0-SNAPSHOT</version>
    <name>NEST Feature ExtractionTools</name>

    <description>Feature Extraction Tools</description>

