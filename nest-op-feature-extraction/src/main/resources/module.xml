        <module>nest-core</module>
    </dependency>
    <dependency>
        <module>nest-graph-builder</module>
    </dependency>
	<dependency>
      <module>nest-reader-dem</module>
    </dependency>
    <dependency>
        <module>nest-io</module>
    </dependency>
	
    <categories>Processor</categories>

    <extension point="beam-ui:actions">

        <action>
            <id>FeatureExtraction</id>
            <class>org.esa.beam.visat.actions.ActionGroup</class>
            <text>Feature Extraction</text>
            <parent>classification</parent>
        </action>

        <action>
            <id>Masks</id>
            <class>org.esa.beam.visat.actions.ActionGroup</class>
            <text>Masks</text>
            <parent>classification</parent>
            <placeBefore>FeatureExtraction</placeBefore>
        </action>

